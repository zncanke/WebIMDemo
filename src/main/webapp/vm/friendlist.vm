#foreach($item in ${friendList})
    <li>
        <img width="50" height="50" src="http://cs625730.vk.me/v625730358/1126a/qEjM1AnybRA.jpg">
        <div class="info">
            <div class="user">$item.username</div>
            #if($item.status == 1)
                <div class="status on"> online</div>
            #else
                <div class="status off"> offline</div>
            #end
            <div class="hiddenThing" hidden="hidden">$item.email</div>
        </div>
    </li>
#end


<script type="text/javascript">
    $("#list-friends li").click(function(){
        var toEmail = $(this).find(".hiddenThing")[0].innerText;
//        alert(toEmail);
        $.ajax({
            type: "GET",
            url: "/chat/chatbox",
            data: {toEmail: toEmail},
            success: function(result) {
                $("#chat").html(result);
            }
        });
    });
</script>