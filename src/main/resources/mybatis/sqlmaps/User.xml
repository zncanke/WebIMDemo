<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.will.imlearntest.dao.UserDao">
    <select id="checkUser" resultType="UserPo">
        select * from user
        where email = #{email} and password = #{password}
    </select>
    <select id="friendList" resultType="FriendshipPo">
        select * from friendship
        where userId = ${userId};
    </select>
    <select id="findUserByEmail" resultType="UserPo">
        select * from user
        where  email = #{email}
    </select>
    <select id="findUserById" resultType="UserPo">
        select * from user
        where  id = #{id}
    </select>
    <select id="getPersonalInfo" resultType="PersonalInfoPo">
        select * from personal_info
        where email = #{email}
    </select>
    <update id="updatePersonalInfo">
        update personal_info SET
        username = #{username},
        signature = #{signature},
        gender = #{gender}
        where email = #{email}
    </update>
    <update id="updateUser">
        update user SET
        username = #{username}
        where email = #{email}
    </update>
</mapper>